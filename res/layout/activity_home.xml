<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#D55503"
    android:orientation="vertical" >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" >
    </include>

    <ImageView
        android:id="@+id/carrierLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/callbut"
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/c1"
            android:onClick="rc"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/smsbut"
            android:layout_width="124dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/smswd"
            android:onClick="rc"
            android:textColor="#ffffffff"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/databut"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/datawd"
            android:onClick="rc"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/splbut"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/b1"
            android:onClick="rc"
            android:textColor="#ffffffff"
            android:textStyle="bold" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_marginTop="15dp"
        android:background="#D55503"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:autoText="false"
            android:ems="10"
            android:hint="Recharge Voucher"
            android:inputType="number"
            android:maxLength="16"
            android:textColor="#ff404040"
            android:textColorHint="#ffb2b2b2"
            android:textSize="17sp" >

            <requestFocus />
        </EditText>

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp"
            android:onClick="rc"
            android:id="@+id/button"
            android:textStyle="bold"
            android:background="@drawable/rc"
            android:textColor="#ffffffff"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</TableLayout>
